{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Paths": {
      "Root": "./logs/test"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With"
    ]
  },
  "Security": {
    "Csms": {
      "Issuer": "https://test-csms.example.com",
      "Audience": "https://test-invoice-api.example.com",
      "SigningKey": "test-signing-key-for-integration-tests-only-32-chars"
    }
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "BurstLimit": 20
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=invoice_test;Username=postgres;Password=postgres;Port=5432"
  },
  "RabbitMQ": {
    "ConnectionString": "amqp://guest:guest@localhost:5672/"
  }
}
