{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Sandbox": {
    "Simulation": false,
    "RetryPolicy": {
      "MaxRetries": 3,
      "DelaySeconds": 2,
      "BackoffMultiplier": 2.0
    },
    "ErrorHandling": {
      "LogErrors": true,
      "IncludeStackTrace": false,
      "MaxErrorLogSize": 1024
    },
    "KZ": {
      "BaseUrl": "https://esf-test.kgd.gov.kz",
      "Username": "SANDBOX_KZ_USERNAME",
      "Password": "SANDBOX_KZ_PASSWORD",
      "WsdlUrl": "https://esf.gov.kz:8443/esf-web/ws/api1?wsdl",
      "DefaultCurrency": "KZT",
      "TimeoutSeconds": 60
    },
    "UZ": {
      "BaseUrl": "https://sandbox.didox.uz",
      "ClientId": "SANDBOX_UZ_CLIENT_ID",
      "ClientSecret": "SANDBOX_UZ_CLIENT_SECRET",
      "CertificatePath": "certs/sandbox_uz.p12",
      "CertificatePassword": "SANDBOX_UZ_CERT_PASS",
      "AuthPath": "/api/auth/e-imzo",
      "InvoicePath": "/api/invoices",
      "DefaultCurrency": "UZS",
      "TimeoutSeconds": 30
    }
  },
  "Secrets": {
    "UZ": {
      "Inn": "123456789",
      "EImzoCertPath": "secrets/uz/cert.pfx",
      "EImzoCertPass": "changeit"
    },
    "KZ": {
      "Username": "sandbox_user",
      "Password": "sandbox_pass",
      "P12Path": "secrets/kz/eds.p12",
      "P12Pass": "changeit",
      "Bin": "123456789012"
    }
  },
  "UzProvider": {
    "BaseUrl": "https://sandbox.didox.uz",
    "ClientId": "SANDBOX_CLIENT_ID",
    "ClientSecret": "SANDBOX_CLIENT_SECRET"
  },
  "KzProvider": {
    "BaseUrl": "https://esf-test.kgd.gov.kz",
    "Username": "SANDBOX_USER",
    "Password": "SANDBOX_PASS"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Npgsql": "Information",
        "RabbitMQ": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/app/app-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/db/db-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/rabbitmq/rabbitmq-.log", "rollingInterval": "Day" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  }
}
