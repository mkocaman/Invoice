{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5433;Database=invoice_db;Username=postgres;Password=1453;Pooling=true;Minimum Pool Size=0;Maximum Pool Size=100;Timeout=15;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Npgsql": "Information",
        "RabbitMQ": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/app/app-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/db/db-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/rabbitmq/rabbitmq-.log", "rollingInterval": "Day" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  }
}
