{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5433;Database=invoice_db;Username=postgres;Password=1453;Pooling=true;Minimum Pool Size=0;Maximum Pool Size=100;Timeout=15;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Providers": {
    "Enabled": [ "FORIBA","LOGO","KOLAYBI","MIKRO","UYUMSOFT","ELOGO","PARASUT","SOVOS","DIA","LUCA" ],
    "Providers": {
      "FORIBA":  { "BaseUrl": "https://efaturatest.foriba.com.tr", "Username": "xxx", "Password": "yyy", "TimeoutSeconds": 30, "Simulation": true },
      "LOGO":    { "BaseUrl": "https://stub.logo.local",          "TimeoutSeconds": 30, "Simulation": true },
      "KOLAYBI": { "BaseUrl": "https://stub.kolaybi.local",       "TimeoutSeconds": 30, "Simulation": true },
      "MIKRO":   { "BaseUrl": "https://stub.mikro.local",         "TimeoutSeconds": 30, "Simulation": true },
      "UYUMSOFT":{ "BaseUrl": "https://stub.uyumsoft.local",      "TimeoutSeconds": 30, "Simulation": true },
      "ELOGO":   { "BaseUrl": "https://stub.elogo.local",         "TimeoutSeconds": 30, "Simulation": true },
      "PARASUT": { "BaseUrl": "https://stub.parasut.local",       "TimeoutSeconds": 30, "Simulation": true },
      "SOVOS":   { "BaseUrl": "https://stub.sovos.local",         "TimeoutSeconds": 30, "Simulation": true },
      "DIA":     { "BaseUrl": "https://stub.dia.local",           "TimeoutSeconds": 30, "Simulation": true },
      "LUCA":    { "BaseUrl": "https://stub.luca.local",          "TimeoutSeconds": 30, "Simulation": true }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Npgsql": "Information",
        "RabbitMQ": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/app/app-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/db/db-.log", "rollingInterval": "Day" } },
      { "Name": "File", "Args": { "path": "logs/rabbitmq/rabbitmq-.log", "rollingInterval": "Day" } }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  }
}
